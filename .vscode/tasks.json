{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build:lsp",
			"type": "shell",
			"command": "bun",
			"args": ["run", "--cwd", "packages/aperture-lsp", "build"],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": [
				"$tsc",
				{
					"owner": "rollup",
					"fileLocation": ["relative", "${workspaceFolder}"],
					"pattern": {
						"regexp": "^(.+):(\\d+):(\\d+):\\s+(error|warning|info)\\s+(.+)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				}
			],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"focus": false,
				"clear": true
			}
		},
		{
			"label": "build:extension",
			"type": "shell",
			"command": "bun",
			"args": ["run", "--cwd", "packages/aperture-client", "build"],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": "$tsc",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"focus": false,
				"clear": true
			}
		},
		{
			"label": "build:all",
			"dependsOn": ["build:lsp", "build:extension"],
			"dependsOrder": "parallel",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$tsc",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "watch:lsp",
			"type": "shell",
			"command": "bun",
			"args": ["run", "--filter", "aperture-lsp", "watch"],
			"isBackground": true,
			"problemMatcher": "$tsc-watch",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "watch:extension",
			"type": "shell",
			"command": "bun",
			"args": ["run", "--cwd", "packages/aperture-client", "watch"],
			"isBackground": true,
			"problemMatcher": "$tsc-watch",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		}
	]
}
