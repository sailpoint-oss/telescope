{
	"name": "telescope",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "bun run --filter ./packages/** build",
		"test": "bun test",
		"test:no-coverage": "bun test --no-coverage packages/telescope-lsp packages/lens",
		"typecheck:examples": "pnpm -C packages/telescope-server run build && pnpm -C packages/test-files exec tsc -p tsconfig.json",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"dependencies": {
		"jiti": "^2.6.1",
		"markdown-it": "^14.1.0",
		"volar-service-json": "^0.0.67",
		"volar-service-markdown": "^0.0.67"
	},
	"devDependencies": {
		"vscode-languageserver-types": "^3.17.5",
		"@types/bun": "^1.3.2",
		"@types/markdown-it": "^14.1.2"
	},
	"workspaces": [
		"packages/*"
	]
}
