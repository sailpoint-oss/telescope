{
	"name": "telescope",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.1.13",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "bun run --filter ./packages/** build",
		"test": "bun test packages/aperture-lsp packages/blueprint packages/lens",
		"test:no-coverage": "bun test --no-coverage packages/aperture-lsp packages/blueprint packages/lens",
		"lint": "bun run --filter ./packages/** lint"
	},
	"dependencies": {
		"@types/bun": "^1.3.2",
		"jiti": "^2.6.1",
		"zod-to-json-schema": "^3.25.0"
	},
	"devDependencies": {
		"vscode-languageserver-types": "^3.17.5"
	}
}
